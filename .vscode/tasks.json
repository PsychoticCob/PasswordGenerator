{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "passwordgenerator:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"containerName": "python-debug",
				"remove": true,
				"volumes": [
					{
						"localPath": "${workspaceFolder}",
						"containerPath": "/app"
					}
				],
				"extraHosts": [],
				"customOptions": "-i -t"
			},
			"python": {
				"file": "app.py"
			}
		}
	]
}